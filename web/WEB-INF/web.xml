<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>urlpaypal</param-name>
        <param-value>https://www.sandbox.paypal.com/cgi-bin/webscr</param-value>
    </context-param>
    <context-param>
        <param-name>urlretorno</param-name>
        <param-value>https://www.segurosporsiempre.cl/carro?accion=finalizar</param-value>
    </context-param>
    <servlet>
        <servlet-name>MappingController</servlet-name>
        <servlet-class>cl.segurosporsiempre.Controller.MappingController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VisitaController</servlet-name>
        <servlet-class>cl.segurosporsiempre.Controller.VisitaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChecklistController</servlet-name>
        <servlet-class>cl.segurosporsiempre.Controller.ChecklistController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemController</servlet-name>
        <servlet-class>cl.segurosporsiempre.Controller.ItemController</servlet-class>
    </servlet>        
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>cl.segurosporsiempre.Controller.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfesionalController</servlet-name>
        <servlet-class>cl.segurosporsiempre.Controller.ProfesionalController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>cl.segurosporsiempre.Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportarAccidenteController</servlet-name>
        <servlet-class>cl.segurosporsiempre.Controller.ReportarAccidenteController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AsesoriaController</servlet-name>
        <servlet-class>cl.segurosporsiempre.Controller.AsesoriaController</servlet-class>
    </servlet>  
    <servlet>
        <servlet-name>AccidenteController</servlet-name>
        <servlet-class>cl.segurosporsiempre.Controller.AccidenteController</servlet-class>
    </servlet>      
    <servlet>
        <servlet-name>UsuarioController</servlet-name>
        <servlet-class>cl.segurosporsiempre.Controller.UsuarioController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmpresaController</servlet-name>
        <servlet-class>cl.segurosporsiempre.Controller.EmpresaController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CapacitacionController</servlet-name>
        <servlet-class>cl.segurosporsiempre.Controller.CapacitacionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MappingController</servlet-name>
        <url-pattern>/baha</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VisitaController</servlet-name>
        <url-pattern>/VisitaController</url-pattern>
    </servlet-mapping>    
    <servlet-mapping>
        <servlet-name>AsesoriaController</servlet-name>
        <url-pattern>/asesoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfesionalController</servlet-name>
        <url-pattern>/pro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportarAccidenteController</servlet-name>
        <url-pattern>/accidente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChecklistController</servlet-name>
        <url-pattern>/checklist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemController</servlet-name>
        <url-pattern>/item</url-pattern>
    </servlet-mapping>    
    <servlet-mapping>
        <servlet-name>UsuarioController</servlet-name>
        <url-pattern>/credencial</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccidenteController</servlet-name>
        <url-pattern>/accidentepro</url-pattern>
    </servlet-mapping>    
    <servlet-mapping>
        <servlet-name>EmpresaController</servlet-name>
        <url-pattern>/empresa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CapacitacionController</servlet-name>
        <url-pattern>/capacitacion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            120
        </session-timeout>
    </session-config>
</web-app>
